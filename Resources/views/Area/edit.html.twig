{% extends 'ArnmAraneumBundle::araneum.html.twig' %}

{% form_theme edit_form 'ArnmAraneumBundle:Form:araneum.html.twig' %}

{% block title %}
	{{ parent() }} | {{ 'area.form.title.edit'|trans({}, 'area') }}
{% endblock %}

{% block content %}
	<div class="page-header">
		<h2>{{ 'area.form.title.edit'|trans({}, 'area') }}</h2>
	</div>
	
	{% include 'ArnmAraneumBundle:Misc:messages.html.twig' %}
	
	{% if edit_form %}
		<form action="{{ path('Araneum_area_update', { 'templateId': template.id, 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
			<fieldset>
				{{ form_widget(edit_form) }}
				<div class="form-actions">
			    	<input class="btn btn-primary" type="submit" value="{{ 'area.form.action.update'|trans({}, 'area') }}"/>
			    	<input class="btn" type="reset" value="{{ 'default.form.action.reset'|trans }}"/>
			    	<a  class="btn" href="{{ path('Araneum_area', {'templateId': template.id}) }}">{{ 'default.form.action.back_to_list'|trans }}</a>
			    	<a href="{{ path('Araneum_area_delete', { 'templateId': template.id, 'id': entity.id }) }}" class="btn btn-danger">
				        Delete
				    </a>
			    </div>
		    </fieldset>
		</form>
	{% endif%}
{% endblock %}