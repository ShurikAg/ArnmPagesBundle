{% extends 'ArnmAraneumBundle::araneum.html.twig' %}

{% block title %}
	{{ parent() }} | {{ 'template.form.title.show'|trans }}
{% endblock %}


{% block content %}
	<div class="page-header">
		<h2>{{ 'template.form.title.show'|trans }}</h2>
	</div>

	<table class="table">
	    <thead>
	        <tr>
	            <th>Id</th>
	            <td>{{ entity.id }}</td>
	        </tr>
	    </thead>
	    <tbody>
	        <tr>
	            <th>Template Name</th>
	            <td>{{ entity.name }}</td>
	        </tr>
	    </tbody>
	</table>
	
	<div class="well">
	    <a href="{{ path('Araneum_template') }}" class="btn">
	        Back to the list
	    </a>
	    <a href="{{ path('Araneum_template_edit', { 'id': entity.id }) }}" class="btn btn-primary">
	        Edit
	    </a>
	    <a href="{{ path('Araneum_template_delete', { 'id': entity.id }) }}" class="btn btn-danger">
	        Delete
	    </a>
	</div>
{% endblock %}