{% extends 'ArnmAraneumBundle::araneum.html.twig' %}


{% block title %}
	{{ parent() }} | {{ 'template.list.title'|trans }}
{% endblock %}

{% block sidebar %}
	<div class="alert alert-info hint">
		<span class="label label-info">{{ 'default.label.info'|trans }}</span>
  		{{ 'template.list.info'|trans|raw }}
	</div>
{% endblock %}

{% block content %}
	<div class="page-header">
		<h2>{{ 'template.list.title'|trans }}</h2>
	</div>
	
	<div class="table-responsive">
        <table class="table table-hover">
    	    <thead>
    	        <tr>
    	            <th>#</th>
    	            <th>{{ 'template.list.table.head.name'|trans }}</th>
    	            <th>{{ 'default.label.actions'|trans }}</th>
    	        </tr>
    	    </thead>
    	    <tbody>
    	    {% for entity in entities %}
    	        <tr>
    	            <td><a href="{{ path('Araneum_template_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
    	            <td>{{ entity.name }}</td>
    	            <td>
                        <a href="{{ path('Araneum_template_show', { 'id': entity.id }) }}" class="btn btn-default">show</a>
                        <a href="{{ path('Araneum_template_edit', { 'id': entity.id }) }}" class="btn btn-default">edit</a>
                        <a href="{{ path('Araneum_area', { 'templateId': entity.id }) }}" class="btn btn-primary">areas</a>
    	            </td>
    	        </tr>
    	    {% endfor %}
    	    </tbody>
    	</table>
	</div>
	
	<div class="well">
	    <a href="{{ path('Araneum_template_new') }}" class="btn btn-primary">
	        {{ 'template.list.action.create_new'|trans }}
	    </a>
    </div>
{% endblock %}
