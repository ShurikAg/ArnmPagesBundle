{% extends 'ArnmAraneumBundle::araneum.html.twig' %}

{% form_theme form 'ArnmAraneumBundle:Form:araneum.html.twig' %}

{% block title %}
	{{ parent() }} | {{ 'page.form.title.create'|trans }}
{% endblock %}

{% block sidebar %}
	<div class="alert alert-info hint">
		<span class="label label-info">{{ 'default.label.info'|trans }}</span>
  		{{ 'page.new.info'|trans|raw }}
	</div>
{% endblock %}

{% block content %}
	<div class="page-header">
		<h2>{{ 'page.form.title.create'|trans }}</h2>
	</div>
	{% include 'ArnmAraneumBundle:Misc:messages.html.twig' %}
	{% if form %}
		<form action="{{ path('ArnmPagesBundle_page_new') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
			<fieldset>
				{{ form_widget(form) }}
				<div class="form-actions">
			    	<input class="btn btn-primary" type="submit" value="{{ 'page.form.action.create'|trans }}"/>
			    	<a class="btn" href="{{ path('ArnmPagesBundle_pages') }}">{{ 'default.form.action.cancel'|trans }}</a>
			    </div>
		    </fieldset>
		</form>
	{% endif%}
{% endblock %}